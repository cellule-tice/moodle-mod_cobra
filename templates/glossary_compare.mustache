{{!
    @template mod_cobra/glossary_compare

    Example context (json):
    {
        "mytext": "entered text with highlighted unknown words",
        "newwords": "comma separated list of unknown words",
        "otherwords": "list of known words with their possible translations"
    }
}}
<div>
    <h3 class="h5">{{#str}}text, mod_cobra{{/str}}</h3>
    {{{mytext}}}
    <h3 class="h5 mt-5">{{#str}}newwords, mod_cobra{{/str}}</h3>
    <ul>
        {{#newwords}}
        <li>{{{word}}}</li>
        {{/newwords}}
    </ul>
    <h3 class="h5 mt-5">{{#str}}alreadyinglossary, mod_cobra{{/str}}</h3>
    <ul>
        {{#otherwords}}
        <li>{{{word}}} : {{{info}}}</li>
        {{/otherwords}}
    </ul>
</div>